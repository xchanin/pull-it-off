{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"module": "es2020",
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@pio/pull-it-off-common": [
				"dist/common"
			],
			"@pio/pull-it-off-common/*": [
				"dist/common/*"
			],
			"@angular/*": [
				"node_modules/@angular/*"
			  ]
		},
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"angularCompilerOptions": {
		"enableIvy": false,
		"strictInjectionParameters": true,
		"strictTemplates": true
	}
}